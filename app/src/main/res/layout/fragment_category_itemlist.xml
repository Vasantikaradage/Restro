<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <android.support.v7.widget.CardView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.4dp"
                        android:layout_marginBottom="5.4dp"
                        app:cardBackgroundColor="@color/gray"
                        app:cardCornerRadius="30dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circle_image"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:padding="10dp"
                            android:src="@drawable/foodimg2" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/frame_layout"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#262628"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_edit_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorwhite"
                    android:padding="5dp"
                    android:src="@drawable/ic_pencil" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="@color/darkgray" />

                <ImageButton
                    android:id="@+id/btn_delete_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:background="@color/colorwhite"
                    android:padding="5dp"
                    android:src="@drawable/ic_delete_button" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>