<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:gravity="center"
                android:text="@string/scratch_card_title"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_scratch_card" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:text="@string/scratch_card_label"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp">

            <android.support.v7.widget.CardView
                android:id="@+id/ivScratch"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                app:cardCornerRadius="@dimen/dimen_10dp"
                app:cardElevation="@dimen/dimen_5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.restrosmart.restro.Utils.ScratchImageView
                        android:id="@+id/sratchImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvScratchName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#998a8a8a"
                        android:gravity="center"
                        android:padding="4dp"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </FrameLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <Button
            android:id="@+id/btnScratchOk"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/button_outline_dark"
            android:gravity="center"
            android:text="@string/btn_ok"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>