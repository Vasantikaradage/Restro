<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeReveal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.CardView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.4dp"
            android:layout_marginTop="5.4dp"
            android:layout_marginBottom="5.4dp"
            app:cardBackgroundColor="#3d5392"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp">




            <ImageView
                android:id="@+id/circle_image"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:padding="5dp"
                android:layout_marginRight="13.4dp"
                android:src="@drawable/foodimg2" />
        </android.support.v7.widget.CardView>

       <!-- <Button
            android:id="@+id/btnCategoryBg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_img_background"
            android:textAllCaps="true"
            android:textColor="#bd512f"
            android:textSize="22sp" />-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="Category name"
                android:textColor="#262628"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_edit_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorwhite"
                    android:src="@drawable/ic_action_btn_edit" />

                <ImageButton
                    android:id="@+id/btn_delete_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/colorwhite"
                    android:src="@drawable/ic_action_btn_delete" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


