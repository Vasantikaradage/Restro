<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeReveal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="13.4dp"
            android:src="@drawable/foodimg2" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tx_offer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="Category name"
                android:textColor="#262628"
                android:textSize="18sp"
                android:textStyle="bold"  />
            <TextView
                android:id="@+id/tx_offer_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="Offer By"
                android:textColor="#262628"
                android:layout_below="@+id/tx_offer_name"
                android:textSize="14sp"
                 />
            <TextView
                android:id="@+id/tx_offer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.4dp"
                android:text="Offer value"
                android:textColor="#262628"
                android:layout_below="@+id/tx_offer_by"
                android:textSize="14sp"
                 />


            <Switch
                android:id="@+id/swStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp" />

        </RelativeLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>

