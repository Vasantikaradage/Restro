gone" />                    <ImageView                        android:id="@+id/img_inactive"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:src="@drawable/ic_circle_gray"                        android:visibility="gone" />                </FrameLayout>                <TextView                    android:id="@+id/tv_offer_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:fontFamily="sans-serif"                    android:layout_toEndOf="@+id/frame"                    android:text="NA"                    android:textColor="@color/colorPrimary"                    android:textSize="18sp" />                <TextView                    android:id="@+id/textViewOptions"                    android:layout_width="20dp"                    android:layout_height="wrap_content"                    android:layout_alignParentEnd="true"                    android:text="&#8942;"                    android:textAppearance="?android:textAppearanceLarge"                    android:textColor="@color/colorPrimary" />            </RelativeLayout>            <TextView                android:id="@+id/tv_offer_desc"                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:text="NA"                android:textSize="14sp"                android:fontFamily="sans-serif"                android:textColor="@color/colorGrey" />            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                >                <TextView                    android:id="@+id/tv_date"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Date :"                    android:textSize="14sp"                    android:fontFamily="sans-serif-condensed"                    android:layout_weight="1"                    android:textColor="@color/gray" />                <TextView                    android:id="@+id/tv_offer_date"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="NA"                    android:textSize="14sp"                    android:layout_toEndOf="@+id/tv_date"                    android:layout_weight="1"                    android:layout_marginStart="5dp"                    android:fontFamily="sans-serif-condensed"                    android:textColor="@color/gray" />            </RelativeLayout>            <RelativeLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                >                <TextView                    android:id="@+id/tv_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Time :"                    android:textSize="14sp"                    android:fontFamily="sans-serif-condensed"                    android:layout_weight="1"                    android:textColor="@color/gray" />                <TextView                    android:id="@+id/tv_offer_time"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="NA"                    android:textSize="14sp"                    android:layout_toEndOf="@+id/tv_time"                    android:layout_weight="1"                    android:layout_marginStart="5dp"                    android:fontFamily="sans-serif-condensed"                    android:textColor="@color/gray" />            </RelativeLayout>        </LinearLayout>    </android.support.v7.widget.CardView></FrameLayout>