                >-->

                <LinearLayout
                    android:id="@+id/linear_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/circle_image"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    app:civ_circle_background_color="@color/colorPrimary"
                    app:civ_border_color="@color/colorAccent"
                    android:layout_marginBottom="14.4dp"
                    android:layout_marginTop="14.4dp"
                    android:layout_marginLeft="13.4dp"
                    android:src="@drawable/foodimg2" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center">

                    <com.restrosmart.restro.customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/itemname1"
                        android:layout_marginLeft="13.4dp"
                        android:text="Category name"
                        android:textColor="#262628"/>


                </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:gravity="center_vertical|end"

                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/delete_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_action_btn_delete"

                            android:background="@drawable/ic_action_circle"
                            android:text="Info"/>

                        <ImageButton
                            android:id="@+id/edit_button"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/ic_action_circle"
                            android:src="@drawable/ic_action_btn_edit"

                            android:text="Edit"/>

                    </LinearLayout>

                </LinearLayout>

               <!-- <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/colorGrey"
                    android:layout_below="@id/linear_category"

                    />-->

            </RelativeLayout>


