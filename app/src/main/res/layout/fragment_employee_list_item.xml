<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/relative_employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_emp_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:padding="0dp"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_trangle" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_action_edit" />

        <TextView
            android:id="@+id/tv_emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_toStartOf="@+id/switch_status"
            android:layout_toEndOf="@id/civ_emp_profile"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch_status"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_emp_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_emp_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toEndOf="@id/civ_emp_profile"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/colorDarkGray"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>