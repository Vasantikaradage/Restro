<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/image_relative"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/login_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tx_add_menu"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Add Menu"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tx_edit_menu"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Edit Menu"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:visibility="gone"/>


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="170dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"



                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_category"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/foodimg2"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <FrameLayout
                    android:id="@+id/iv_select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_category"
                    android:layout_marginStart="100dp"

                    android:layout_marginTop="30dp"

                    >

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"

                        android:background="@drawable/circle_bg_green" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_photo_camera" />

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>







        <!--<android.support.design.widget.FloatingActionButton

    android:id="@+id/iv_select_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/card"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="100dp"

    android:backgroundTint="@color/colorPrimaryDark"
            android:src="@drawable/ic_action_cat_camera" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/image_relative"
            >

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="42dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/radio_grp_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/btn_radio_sweet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="sweet"/>

                        <RadioButton
                            android:id="@+id/btn_radio_spicy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="spicy"/>

                        <RadioButton
                            android:id="@+id/btn_radio_null"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Other"/>


                    </RadioGroup>


                </LinearLayout>

            <EditText
                android:id="@+id/etx_menu_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"

                android:layout_marginStart="10dp"

                android:hint="Enter Menu Name">

            </EditText>
            <EditText
                android:id="@+id/etx_menu_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:hint="Enter Menu Price">


            </EditText>

                <EditText
                    android:id="@+id/etx_menu_discp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:maxLines="3"
                    android:layout_marginStart="10dp"
                    android:hint="Enter Menu Discription">
                </EditText>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_outline_dark"
                    android:text="Cancel"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@drawable/button_outline_dark"
                    android:text="Save"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible"/>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/dimen_20dp"
                    android:background="@drawable/button_outline_dark"
                    android:text="Update"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

            </LinearLayout>


        </RelativeLayout>



        <!-- </android.support.v7.widget.CardView>
     </FrameLayout>-->
    </LinearLayout>
</LinearLayout>





