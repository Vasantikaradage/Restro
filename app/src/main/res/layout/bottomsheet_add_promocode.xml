<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tv_add_promocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Promocode"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_edit_promocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit PromoCode"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/texview_outline_black"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tx_category"
            android:padding="10dp"
            android:inputType="number"
            android:singleLine="true"
            android:hint="Enter Amount(%)"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Promo Code"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_promocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:maxLength="4"
            android:background="@drawable/texview_outline_black"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tx_category"
            android:padding="10dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textCapCharacters"
            android:singleLine="true"
            android:hint="Enter PromoCode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/texview_outline_black"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/tx_category"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:hint="Enter Description"/>

       <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Dates"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true">-->

        <!--    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="From Date"
                    android:padding="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_from_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/texview_outline_black"
                    android:layout_marginStart="10dp"
                    android:layout_below="@+id/tx_category"
                    android:padding="10dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:singleLine="true"
                    android:hint="Enter From Date"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Date "
                    android:padding="5dp"

                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_to_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/texview_outline_black"
                    android:layout_marginStart="10dp"

                    android:layout_below="@+id/tx_category"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Enter To Date"/>

          <!--  </LinearLayout>
        </android.support.v7.widget.CardView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etx_category_name"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/button_outline_dark"
                android:text="Cancel"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:background="@drawable/button_outline_dark"
                android:text="Save"
                android:visibility="visible"
                android:textColor="@color/colorPrimary" />


            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:background="@drawable/button_outline_dark"
                android:text="Update"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>