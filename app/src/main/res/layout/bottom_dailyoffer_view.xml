<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:elevation="5dp"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/flavour_name"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_weight="1.9"
            android:gravity="center"
            android:text="@string/daily_offer_details"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_cancel" />

    </LinearLayout>
        <ImageView
            android:id="@+id/banner_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="2dp"
            android:layout_below="@+id/linear_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@+id/banner_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_offer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_toEndOf="@+id/img_inactive"
                android:text="NA"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu Price:"/>

            <TextView
                android:id="@+id/tv_menu_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_toEndOf="@+id/tv_price"
                android:text="NA"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_off_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offer Price:"/>

                <TextView
                    android:id="@+id/tv_offer_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:layout_toEndOf="@+id/tv_off_price"
                    android:text="NA"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_offer_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorGrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="1"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_offer_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textSize="14sp"
                    android:layout_toEndOf="@+id/tv_date"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="1"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_offer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NA"
                    android:textSize="14sp"
                    android:layout_toEndOf="@+id/tv_time"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/gray" />
            </RelativeLayout>

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tv_menu_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu Details"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:text="Buy" />

                 <!--   <LinearLayout
                        android:id="@+id/linear_layout_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@+id/tv_buy"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:text="Menu" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:text="Price" />



                    </LinearLayout>-->


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_menu_item_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_buy"
                        android:padding="5dp">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_get"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/rv_menu_item_buy"
                        android:textColor="@color/colorPrimary"
                        android:text="Get" />


               <!--     <LinearLayout
                        android:id="@+id/linear_layout_get"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_get"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:text="Menu" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:text="Price" />



                    </LinearLayout>
-->

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_menu_item_get"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_below="@+id/tv_get">

                    </android.support.v7.widget.RecyclerView>


                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>



</RelativeLayout>





