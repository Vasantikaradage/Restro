<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivMenuImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/foodimg2" />

        <LinearLayout
            android:id="@+id/llDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/ivMenuImg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVegMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/menu_name"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_spicy2" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMenuDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llDetails"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/ivMenuImg"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/menu_discription"
            android:textColor="@color/colorDarkGray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMenuDesc"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/ivMenuImg">

            <TextView
                android:id="@+id/tvMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 200"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rbMenu"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMenuPrice"
                android:numStars="5"
                android:stepSize="1"
                android:theme="@style/RatingBar" />

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp">

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_add_cart" />-->

                <!--<com.medialablk.easygifview.EasyGifView
                    android:id="@+id/easyGifView"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:src="@drawable/logo_gif4"
                    android:visibility="visible" />-->

                <Button
                    android:id="@+id/btnAddMenu"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:background="@drawable/button_bg_rounded_corners"
                    android:text="Add"
                    android:textColor="@color/colorPrimary"
                    android:visibility="visible" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:id="@+id/llQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ivMinusQty"
                            android:layout_width="46dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMenuQty"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:padding="4dp"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ivAddQty"
                            android:layout_width="46dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/colorPrimary"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!--<ImageView
                            android:id="@+id/ivMinusQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_minus_qty" />

                        <TextView
                            android:id="@+id/tvMenuQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/ivAddQty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_add_qty" />-->
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </FrameLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
