<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragFromEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="ScannerOverlay">
        <attr name="square_width" format="integer" />
        <attr name="square_height" format="integer" />
        <attr name="line_color" format="color" />
        <attr name="line_width" format="integer" />
        <attr name="line_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="BarcodeReader">
        <attr name="auto_focus" format="boolean" />
        <attr name="use_flash" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SlyCalendarView">
        <attr name="backgroundColor" format="color"/>
        <attr name="headerColor" format="color"/>
        <attr name="headerTextColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="selectedColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="firstMonday" format="boolean"/>
    </declare-styleable>

  <!--  <declare-styleable name="CustomOfferView">
        <attr name="offerBackgroundColor" format="color"/>
    </declare-styleable>
-->
    <declare-styleable name="CustomTicketView">
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="offerBackgroundColor" format="color" />
        <attr name="scallopRadius" format="dimension" />
        <attr name="scallopPositionPercent" format="float" />
        <attr name="showBorder" format="boolean" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="showDivider" format="boolean" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerColor" format="color" />
        <attr name="dividerType" format="enum">
            <enum name="normal" value="0" />
            <enum name="dash" value="1" />
        </attr>
        <attr name="dividerDashGap" format="dimension" />
        <attr name="dividerDashLength" format="dimension" />
        <attr name="cornerType" format="enum">
            <enum name="normal" value="0" />
            <enum name="rounded" value="1" />
            <enum name="scallop" value="2" />
        </attr>
        <attr name="cornerRadius" format="dimension" />
        <attr name="android:elevation" />
        <attr name="ticketElevation" format="dimension" />
    </declare-styleable>



</resources>