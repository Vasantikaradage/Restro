        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityOnGoingViewDetails" />
        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityPastViewOrderDetails" />
        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityMenu" />
        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityAddNewMenu"/>
        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityAddNewOffer" />
        <activity android:name="com.restrosmart.restrohotel.Admin.ActivityProfile"/>
